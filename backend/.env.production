# Attendance Production Environment Configuration
# Copy this file to .env and update the values for your deployment

# Django Core Settings
SECRET_KEY=your-super-secret-key-here-change-this-to-something-very-secure
DEBUG=False
ALLOWED_HOSTS=attendance.brfood.us,your-server-ip-address

# Database Configuration (SQLite for production)
DATABASE_URL=sqlite:///var/www/attendance/backend/db.sqlite3

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379/0

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# CORS Settings
CORS_ALLOWED_ORIGINS=https://attendance.brfood.us
CORS_ALLOW_CREDENTIALS=True

# Static and Media Files
STATIC_ROOT=/var/www/attendance/backend/staticfiles
MEDIA_ROOT=/var/www/attendance/backend/media
STATIC_URL=/static/
MEDIA_URL=/media/

# Security Headers
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Time Zone (Pacific Time for San Francisco)
TIME_ZONE=America/Los_Angeles
DEFAULT_EMPLOYEE_TIMEZONE=America/Los_Angeles

# Company Settings
COMPANY_NAME=BRFood

# JWT Settings
SIMPLE_JWT_ACCESS_TOKEN_LIFETIME=60
SIMPLE_JWT_REFRESH_TOKEN_LIFETIME=1440
SIMPLE_JWT_ROTATE_REFRESH_TOKENS=True

# Email Configuration (Optional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# SMS Configuration (Optional - Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload Settings
FILE_UPLOAD_MAX_MEMORY_SIZE=10485760
DATA_UPLOAD_MAX_MEMORY_SIZE=10485760

# Celery Configuration
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# Feature Flags
ENABLE_PUSH_NOTIFICATIONS=True
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_SMS_NOTIFICATIONS=False
ENABLE_WEBHOOKS=True

# Logging
LOG_LEVEL=INFO
