# WorkSync Production Environment Configuration
# Copy this file to .env.production and fill in the values

# Django Settings
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-server-ip

# Database Configuration
# For SQLite (recommended for WorkSync):
DATABASE_URL=sqlite:///opt/worksync/backend/db.sqlite3
# For PostgreSQL (if you need advanced features):
# DATABASE_URL=postgresql://username:password@localhost:5432/worksync_production

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379/0

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# SSL/Security Settings
SECURE_SSL_REDIRECT=True

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# IP Whitelist for Admin Access (comma-separated)
ALLOWED_IPS=127.0.0.1,192.168.1.0/24,your-office-ip

# Admin IP Restrictions (for Django admin)
ADMIN_ALLOWED_IPS=127.0.0.1,192.168.1.0/24,your-office-ip

# Monitoring & Logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# File Storage (for production with cloud storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-s3-bucket
# AWS_S3_REGION_NAME=us-east-1

# Additional Security
# CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
